<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <ImageView
            android:id="@+id/ivDonasi"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:background="@drawable/articlebg"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/poster_one" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_toEndOf="@id/ivDonasi"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/tvJudulDonasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="13dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="How to recycle plastic waste"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/tvJudulDonasi">

                <TextView
                    android:id="@+id/articleDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="12-02-2023"/>

                <TextView
                    android:id="@+id/dottt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="1dp"
                    android:layout_toEndOf="@id/articleDate"
                    />

                <TextView
                    android:id="@+id/tvKategoriDonasi"
                    android:layout_width="wrap_content"
                    android:layout_toEndOf="@id/dottt"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content"
                    android:textColor="#C03E3E"
                    android:text="Read More"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>