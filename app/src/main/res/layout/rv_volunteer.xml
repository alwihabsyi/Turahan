<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ivDonasi"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:background="@drawable/articlebg"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/poster_one" />

        <TextView
            android:id="@+id/tvJudulDonasi"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="13dp"
            android:layout_toEndOf="@id/ivDonasi"
            android:fontFamily="@font/montserrat_medium"
            android:text="How to recycle plastic waste"
            android:textSize="18sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvStatusDonasi"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/bgStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#9403A9F4"/>

            <TextView
                android:id="@+id/tvStatusDonasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Pending"
                android:fontFamily="@font/righteous"
                android:textSize="10sp"/>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/ivDonasi">

            <TextView
                android:id="@+id/tvTanggalDonasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="12-02-2023"/>

            <ImageView
                android:id="@+id/dottt"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginTop="-2dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/tvTanggalDonasi"
                android:src="@drawable/circleicon"/>

            <TextView
                android:id="@+id/tvKategoriDonasi"
                android:layout_width="wrap_content"
                android:layout_toEndOf="@id/dottt"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Eatable"/>

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>