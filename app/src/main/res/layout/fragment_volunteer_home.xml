<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".volunteer.VolunteerHomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/volHomeAppBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="DONASI MAKANAN"
            android:textColor="#B83B3B"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/volHomeAppBar"
            android:layout_marginTop="13dp"
            android:background="#EDEDED"
            android:elevation="1dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHomeVolunteer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/volHomeAppBar"
            android:layout_marginTop="30dp"
            tools:listitem="@layout/rv_volunteer"/>

    </RelativeLayout>

</ScrollView>