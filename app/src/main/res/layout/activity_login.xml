<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context=".sign.LoginActivity">

<!--    <ImageView-->
<!--        android:id="@+id/shape_login"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="260dp"-->
<!--        android:background="@drawable/shape_login"-->
<!--        android:layout_alignParentTop="true"/>-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text=""
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="28sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        app:cardCornerRadius="160dp"
        android:foregroundGravity="center"
        app:cardElevation="32dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logo_turahan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher_round" />

    </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/tv_logo"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/card_logo"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/righteous"
        android:src="@drawable/textlogo"
        android:textAllCaps="true"
        android:textColor="@color/BrownDark"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_logo"
        android:layout_centerInParent="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/montserrat"
        android:text="Why waste when there are still many in need?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_signIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:minHeight="50dp"
        app:cardBackgroundColor="@color/BrownDark"
        android:layout_above="@id/btn_signUp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:fontFamily="@font/montserrat"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:textColor="@color/white"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_signUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:minHeight="50dp"
        app:cardBackgroundColor="@color/BrownLight"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="2dp"
        android:layout_above="@id/btnLoginVolunteer"
        android:layout_marginBottom="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:fontFamily="@font/montserrat"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:textColor="@color/black"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnLoginVolunteer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login as Volunteer"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat"
            android:textSize="12sp" />


    </androidx.cardview.widget.CardView>


</RelativeLayout>